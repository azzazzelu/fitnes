(function(cookieName){var exId = getCookie(cookieName);if (exId) {countVisit(exId);return;};var newId = generateId();setCookie(newId, 30);sync(newId);syncProDmp(newId);countVisit(newId);function getCookie(name) {var matches=document.cookie.match(new RegExp("(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1')+"=([^;]*)"));return matches ? matches[1] : undefined;};function setCookie(value, exdays) {var d = new Date();d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));var expires = "expires=" + d.toUTCString();document.cookie = cookieName + "=" + value + ";" + expires + ";path=/;";}function generateId() {if (typeof crypto === 'object') {if (typeof crypto.randomUUID === 'function') {return crypto.randomUUID();}if (typeof crypto.getRandomValues === 'function' && typeof Uint8Array === 'function') {const callback = (c)=>{const num = Number(c);return (num ^ (crypto.getRandomValues(new Uint8Array(1))[0] & (15 >> (num / 4)))).toString(16);};return '10000000-1000-4000-8000-100000000000'.replace(/[018]/g, callback);}}return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {var r = (Math.random() * 16) | 0, v = c == 'x' ? r : (r & 0x3) | 0x8;return v.toString(16);});};function sync(userId) {var img = document.createElement('img');setStyle(img);img.src = 'https://sync.adspend.space/retargeting?uid=' + userId;document.querySelector('body').appendChild(img);};function syncProDmp(userId) {var img = document.createElement('img');setStyle(img);img.src = 'https://prodmp.ru/adspend-sync.gif?uid=' + userId;document.querySelector('body').appendChild(img);};function countVisit(userId) {var px = document.createElement('img');setStyle(px);var source = encodeURI(window.location.hostname);px.src='https://event.adspend.space?type=retargeting&id='+clearUrl(window.location.href)+'&segmentId='+document.currentScript.getAttribute("segmentId")+'&source='+source+'&userId='+userId+'&eventType=1';document.querySelector('body').appendChild(px);};function clearUrl(url) {var p = new URL(url)if p.searchParams {p.searchParams.delete("utm_medium")p.searchParams.delete("utm_source")p.searchParams.delete("utm_term")p.searchParams.delete("utm_content")p.searchParams.delete("utm_campaign")p.searchParams.delete("placement")p.searchParams.delete("adposition")p.searchParams.delete("matchtype")p.searchParams.delete("device")}return p.toString()};function setStyle(img) {if (img.style) {img.style.position = "absolute";img.style.visibility = "hidden";img.style.width = "1px";img.style.height = "1px";}};})('as-user');